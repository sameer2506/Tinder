<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="auth_fragment_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/auth_fragment_screen_drawable</item>
    </style>

    <style name="login_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/login_button_drawable</item>
    </style>

    <style name="edit_text_drawable">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/otp_edit_text_drawable</item>
    </style>

    <style name="button_style">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_drawable</item>
    </style>

    <style name="edit_text_otp">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/otp_edit_text_drawable</item>
    </style>

    <style name="bottomNavItemColor">
        <item name="android:background">@drawable/bottom_drawable</item>
    </style>

</resources>